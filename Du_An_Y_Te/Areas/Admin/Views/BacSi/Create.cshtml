
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    @model Du_An_Y_Te.Areas.Admin.Models.BacSiViewModel.BacSiCreateViewModel
}
<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>

        <div class='col-xs-12'>
            <div class="page-title">

                <div class="pull-left">
                    <!-- PAGE HEADING TAG - START --><h1 class="title">Add Doctor</h1><!-- PAGE HEADING TAG - END -->
                </div>

                <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i>Home</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","BacSi")">List Doctor</a>
                        </li>
                        <li class="active">
                            <strong>Doctor Profile</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <!-- MAIN CONTENT AREA STARTS -->


        <div class="col-lg-12">
            <section class="box nobox ">
                <div class="content-body">
                    <div class="row">
                        @*<div class="col-md-3 col-sm-4 col-xs-12">
                            <div class="uprofile-image">
                                <img id="PrevImg" alt="" src="~/Areas/Admin/data/profile/user.png" class="img-responsive">
                            </div>
                            <div class="uprofile-name">
                                <h1>Cập Nhật Ảnh Đại Diện</h1>
                                <input type="file" name="Picture" id="Picture" accept="image/*" />
                            </div>


                        </div>*@
                        <div class="col-md-9 col-sm-8 col-xs-12">
                            <div class='col-xs-12'>
                                <div class="page-title">

                                    <div class="pull-left">
                                        <!-- PAGE HEADING TAG - START --><h1 class="title">Infomation</h1><!-- PAGE HEADING TAG - END -->
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!-- MAIN CONTENT AREA STARTS -->

                            <div class="col-xs-12">
                                <div class="content-body">
                                    <div class="row">
                                        @Html.AntiForgeryToken()
                                        <form id="TaoBacSi" class="col-md-12 col-sm-12 col-xs-12" action="@Url.Action("Create","BacSi","")" method="post">

                                            <div class="form-group">
                                                <label class="form-label" for="field-4">Type of doctor</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    <select class="form-control m-bot15" id="id_LoaiBacSi" name="id_LoaiBacSi">
                                                        @for (int i = 0; i < Model.DsLoaiBacSi.Count; i++)
                                                        {
                                                            <option value="@Model.DsLoaiBacSi[i].id">@Model.DsLoaiBacSi[i].TenLoaiBacSi</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="field-1">Full Name</label>
                                                <span class="desc">Đào Duy Tùng</span>
                                                <div class="controls">
                                                    <input type="text" class="form-control" id="HoTen" name="HoTen" required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="field-1">Phone Number</label>
                                                <span class="desc">0906456985</span>
                                                <div class="controls">
                                                    <input type="number" min="0" maxlength="12" class="form-control" id="SoDienThoaiLienLac" name="SoDienThoaiLienLac" required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="field-1">Personal clinic</label>
                                                <span class="desc">Số 11 đường Mai chí thọ quận 5</span>
                                                <div class="controls">
                                                    <input type="text" class="form-control" id="DiaChiPhongKhamTu" name="DiaChiPhongKhamTu">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="field-2">Hospital work</label>
                                                <span class="desc">duytung</span>
                                                <div class="controls">
                                                    <select class="form-control m-bot15" id="id_BenhVienLamViec" name="id_BenhVienLamViec">
                                                        @for (int i = 0; i < Model.DsBenhVien.Count; i++)
                                                        {
                                                            <option value="@Model.DsBenhVien[i].id">@Model.DsBenhVien[i].TenBenhVien</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="field-1">Account</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    <input type="text" class="form-control" id="TaiKhoan" name="TaiKhoan">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary btn-lg ">Create</button>
                                                <button type="reset" class="btn btn-default  btn-lg">Reset</button>
                                            </div>

                                        </form>
                                    </div>


                                </div>
                            </div>








                        </div>
                    </div>
                </div>
            </section>
        </div>


        <!-- MAIN CONTENT AREA ENDS -->
    </section>
</section>
@section script{
    <script src="~/Areas/Admin/assets/jsForView/BacSi/TaoBacSi.js" type="text/javascript"></script>
}