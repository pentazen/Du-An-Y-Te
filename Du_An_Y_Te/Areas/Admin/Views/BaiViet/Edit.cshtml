@model Du_An_Y_Te.Areas.Admin.Models.BaiVietEditViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



        <div class='col-xs-12'>
            <div class="page-title">

                <div class="pull-left">
                    <!-- PAGE HEADING TAG - START --><h1 class="title">Form Editors - CKEDITOR</h1><!-- PAGE HEADING TAG - END -->
                </div>

                <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i>Home</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","BaiViet")">List Post</a>
                        </li>
                        <li class="active">
                            <strong>Edit Post</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <!-- MAIN CONTENT AREA STARTS -->


        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Create New Post</h2>
                    <div class="actions panel_actions pull-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                        <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                        <a class="box_close fa fa-times"></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <form id="TaoBaiViet" class="col-md-12 col-sm-12 col-xs-12" action="@Url.Action("Edit","BaiViet","")" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <input type="hidden" id="id" name="id" value="@Model.BaiViet.id" />
                                <div class="form-group">
                                    <label class="form-label" for="field-2">Title</label>
                                    <span class="desc">Đọc Bệnh Án Huyết Học</span>
                                    <div class="controls">
                                        <input type="text" value="@Model.BaiViet.TenBaiViet" class="form-control" id="TenBaiViet" name="TenBaiViet" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="field-2">Source</label>
                                    <span class="desc"> http://khoahoc.tv/huong-dan-cach-doc-ket-qua-xet-nghiem-mau-69859</span>
                                    <div class="controls">
                                        <input type="text" value="@Model.BaiViet.Nguon" class="form-control" id="Nguon" name="Nguon" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="field-2">Description</label>
                                    <span class="desc"> Hỗ trợ các bạn hiểu thêm về y học</span>
                                    <div class="controls">
                                        <textarea class="form-control" id="MoTa" name="MoTa" required maxlength="500">@Model.BaiViet.MoTa</textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="field-4">Topic</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control m-bot15" id="id_ChuDe" name="id_ChuDe">
                                            @for (int i = 0; i < Model.DsChuDe.Count; i++)
                                            {
                                                <option @if (Model.DsChuDe[i].id == Model.BaiViet.id_ChuDe) { <text>selected</text> } value ="@Model.DsChuDe[i].id">@Model.DsChuDe[i].TenChuDe</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="field-2">Gallery</label>
                                    <span class="desc"> </span>
                                    <div class="controls">
                                        <img src="@Url.Action("GetFileByUrl","TaiKhoan",new {url=Model.BaiViet.TapTin.DuongDan })" alt="Alternate Text" id="PrevImg" width="200px" height="200px" />
                                        <input type="file" class="form-control" id="collecFile" name="collecFile" accept="image/*">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="field-2"></label>
                                    <div class="controls">
                                        <textarea class="ckeditor" cols="200" id="NoiDungBaiViet" name="NoiDungBaiViet" rows="20" required>
                                            @Html.Raw(Model.BaiViet.NoiDungBaiViet)
                                        </textarea>
                                    </div>
                                </div>
                               
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary ">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>


        <!-- MAIN CONTENT AREA ENDS -->











@section style{
    <link href="~/Areas/Admin/assets/plugins/ckeditor/contents.css" rel="stylesheet" type="text/css" />}

@section script{
    @*<script src="//cdn.ckeditor.com/4.6.2/full/ckeditor.js"></script>*@

    <script src="~/Areas/Admin/assets/plugins/ckeditor/ckeditor.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/assets/jsForView/BaiViet/BaiVietCreate.js" type="text/javascript"></script>
}
