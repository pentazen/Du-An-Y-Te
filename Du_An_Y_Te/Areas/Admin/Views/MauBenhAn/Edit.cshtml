@model Service.EntityModel.MauBenhAn

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    tbody tr.selected,table.dataTable tr.selected td {
        background-color: #B0BED9;
    }
</style>
<div class="col-xs-12">
    <div class="page-title">

        <div class="pull-left">
            <!-- PAGE HEADING TAG - START --><h1 class="title">Medical records form Detail</h1><!-- PAGE HEADING TAG - END -->
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i>Home</a>
                </li>
                <li>
                    <a href="@Url.Action("Index","MauBenhAn")">Medical records form </a>
                </li>
                <li class="active">
                    <strong>Medical records form Detail</strong>
                </li>
            </ol>
        </div>

    </div>
</div>
<div class="clearfix"></div>
<!-- MAIN CONTENT AREA STARTS -->

<div class="col-xs-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left"></h2>
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <input type="hidden" class="form-control" id="MauBenhAn_Id" value="@Model.id">

                    <div class="form-group">
                        <label class="form-label" for="field-1">Name</label>
                        <span class="desc"></span>
                        <div class="controls">
                            <input type="text" class="form-control" value="@Model.TenMauBenhAn">
                        </div>
                    </div>

                </div>
                <h3>PARAMETER INTERVAL LIST</h3>
                <button class="btn btn-primary" data-toggle="modal" data-target="#ThemLoaiXetNghiem">Large modal</button>
                <table id="tableLoaiXetNghiem" class="table table-striped dt-responsive display">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Name Show</th>
                            <th>Unit</th>
                            <th>Location</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    @*<tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Office</th>
                                <th>Age</th>
                                <th>Start date</th>
                                <th>Salary</th>
                            </tr>
                        </tfoot>*@

                    <tbody>
                        @foreach (var item in Model.MauBenhAn_LoaiXetNghiem)
                        {
                            <tr id="loaiXetNghiem_@item.id_LoaiXetNghiem">
                                <td>@item.id_LoaiXetNghiem</td>
                                <td>@item.LoaiXetNghiem.TenLoaiXetNghiem</td>
                                <td>@item.LoaiXetNghiem.TenHienThi</td>
                                <td>@item.LoaiXetNghiem.DonVi</td>
                                <td>@item.ThuTu</td>
                                <td>
                                    <div class="buttons-remove">
                                        <a class="btn btn-warning">Remove</a>
                                    </div>
                                    <div class="buttons-edit">
                                        <a class="btn btn-info">Edit</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>


        </div>
    </section>
</div>





<!-- Modal -->
<div class="modal fade" id="SuaThongTinLoaiXetNghiem" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="SuaThongTinLoaiXetNghiem_Label">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="">Id</label>
                    <input type="text" disabled class="form-control" id="SuaThongTinLoaiXetNghiem_Id">
                </div>
                <div class="form-group">
                    <label for="">Name Show</label>
                    <input type="text" disabled class="form-control" id="SuaThongTinLoaiXetNghiem_NameShow">
                </div>
                <div class="form-group">
                    <label>Unit</label>
                    <input type="text" disabled class="form-control" id="SuaThongTinLoaiXetNghiem_Unit">
                </div>
                <div class="form-group">
                    <label>Location</label>
                    <input type="text" class="form-control" id="SuaThongTinLoaiXetNghiem_Location">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="luuLoaiXetNghiem()">Save changes</button>
            </div>
        </div>
    </div>
</div>




<!-- Modal -->
<div class="modal fade" id="ThemLoaiXetNghiem" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="SuaThongTinLoaiXetNghiem_Label">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="tableThemLoaiXetNghiem" class="display" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Name Show</th>
                            <th>Unit</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="themLoaiXetNghiem()">Chosse</button>
            </div>
        </div>
    </div>
</div>










<!-- MAIN CONTENT AREA ENDS -->


