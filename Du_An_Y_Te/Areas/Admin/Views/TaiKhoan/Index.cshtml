
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    @model IList<Service.EntityModel.ThanhVien> 
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>

    <div class='col-xs-12'>
        <div class="page-title">

            <div class="pull-left">
                <!-- PAGE HEADING TAG - START --><h1 class="title">Account List</h1><!-- PAGE HEADING TAG - END -->                            </div>

                            <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i>Home</a>
                        </li>
                        <li>
                            <a>Account</a>
                        </li>
                    </ol>
                </div>
                                
        </div>
    </div>
    <div class="clearfix"></div>
    <!-- MAIN CONTENT AREA STARTS -->
    
<div class="col-lg-12">
    <section class="box ">
            <header class="panel_header">
                <h2 class="title pull-left">All Account</h2>
                <div class="actions panel_actions pull-right">
                    <a class="btn btn-success" href="@Url.Action("Create","TaiKhoan")">Create</a>
                	<a class="box_toggle fa fa-chevron-down"></a>
                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                    @*<a class="box_close fa fa-times"></a>*@
                </div>
            </header>
            <div class="content-body">    <div class="row">
        <div class="col-xs-12">


            <table id="example-1" class="table table-striped dt-responsive display">
                <thead>
                    <tr>
                        <th>Account</th>
                        <th>Email</th>
                        <th>Full Name</th>
                        <th>Date Join</th>
                        <th>Phone Number</th>
                        <th>Type Account</th>
                        <th>Last Login</th>
                        <th>Action</th>
                    </tr>
                </thead>

                @*<tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Office</th>
                        <th>Age</th>
                        <th>Start date</th>
                        <th>Salary</th>
                    </tr>
                </tfoot>*@

                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr data-id-thanhvien="@Model[i].id">
                            
                            <td>@Model[i].TaiKhoan</td>
                            <td>@Model[i].Email</td>
                            <td>@{var fullname=Model[i].Ho +" "+ Model[i].Ten;}@fullname</td>
                            <td>@DateTime.Parse(Model[i].NgayTao.ToString()).ToString("dd/MM/yyyy")</td>
                            <td>@Model[i].SoDienThoai</td>
                            <td>@Model[i].LoaiThanhVien.TenLoaiThanhVien</td>
                            <td>@if (Model[i].LanCuoiDangNhap != null) { DateTime.Parse(Model[i].LanCuoiDangNhap.ToString()).ToString("dd/MM/yyyy"); }</td>
                            <td style="white-space: nowrap">
                                <!-- form -->

                                <div class="buttons" ng-show="!rowform.$visible" style="">
                                    <a  href="@Url.Action("Edit","TaiKhoan",new {id=@Model[i].id })" class="btn btn-xs btn-secondary" >edit</a>
                                    <button type="button" class="btn btn-xs btn-danger" onclick="DeleteTaiKhoan('@Model[i].TaiKhoan',@Model[i].id,this)">Delete</button>
                                </div>
                            </td>
                    </tr>
                    }
                    
                </tbody>
            </table>




        </div>
    </div>
    </div>
        </section></div>

        @Html.AntiForgeryToken()

<!-- MAIN CONTENT AREA ENDS -->
    </section>
    </section>

