                                            <label class="control-label col-sm-5">@loaiXetNghiem.TenHienThi</label>
                                            <div class="col-sm-7">
                                                @if (!string.IsNullOrEmpty(loaiXetNghiem.DonVi) && loaiXetNghiem.DonVi.Split(',').Count() > 0)
